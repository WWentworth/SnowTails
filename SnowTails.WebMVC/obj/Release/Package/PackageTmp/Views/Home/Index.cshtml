@{
    ViewBag.Title = "Home Page";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
    .container {
        max-width: 100% !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }

    .carousel-item {
        height: 100vh;
        width: 100% !important;
        background: no-repeat center center scroll;
        background-size: cover;
    }

    body {
        background-color: black;
    }

    .carousel-caption {
        margin-bottom: 5% !important;
        background: rgba(0,0,0,0.6);
        padding: 50px 100px;
    }

    .carousel-caption h5 {
        font-size: 60px;
        color: red;
    }

    .carousel-caption p {
        font-size: 20px;
    }

    .drk:after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: #000;
        opacity: 0.3;
    }
</style>
<body>
    <div id="slideshow" class="carousel slide my-carousel my-carousel carousel-fade" data-ride="carousel" data-pause="false">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active drk" style="background-image: url('https://i.ibb.co/7Q7K9K7/272334203-361270895817957-1618653475283809596-n.jpg') ">
                <div class="carousel-caption  d-none d-md-block w-50 m-lg-auto mr-auto">
                    <h5>Meet Max</h5>
                    <p>Maxiumus was our first rescue who found his forever home. We got many updates on Max's adventures and he was always happey with his radiant smile! Come start your own success story!'</p>
                </div>
            </div>
            <div id="slideshow" class="carousel slide my-carousel my-carousel carousel-fade" data-ride="carousel" data-pause="false">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item drk" style="background-image: url('https://badrap.org/sites/default/files/styles/banner_image/public/2019-10/sebo_banner.jpg?itok=q0NZEFY3')">
                        <div class="carousel-caption  d-none d-md-block w-50 m-lg-auto mr-auto">
                            <h5>Over 300 dogs homed!</h5>
                            <p>View our numerous success stories and adopter feedback! We do all we can to make sure our dogs find their forever home, and you find the companion perfect for you!</p>
                        </div>
                    </div>
                    <div class="carousel-item drk " style="background-image: url('http://images6.fanpop.com/image/photos/43200000/Husky-Banner-peaceandlove67-43218797-1000-330.jpg')">
                        <div class="carousel-caption  d-none d-md-block m-lg-auto mr-auto">
                            <h5>Volunteers Welcome!</h5>
                            <p>We find ourselves always looking for volunteers! Come in and give our amazing companions some additional interaction, going for walks, and just to give them some much deserved love!</p>
                        </div>
                    </div>
                    <div class="carousel-item drk " style="background-image: url('https://www.petprotect.co.uk/wp-content/uploads/2019/01/Husky-2000W.jpg')">
                        <div class="carousel-caption  d-none d-md-block m-lg-auto mr-auto">
                            <h5>Adopt Now!</h5>
                            <p>Please create a profile and select a dog you would like to meet. We go through a rigorous testing with both the dog and the adopter to make sure our furry friends go the best possible home!</p>
                        </div>
                    </div>
                </div>
            </div>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
