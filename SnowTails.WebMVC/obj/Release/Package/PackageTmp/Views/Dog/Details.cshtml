@model SnowTails.Models.Dog.DogDetail

@{
    ViewBag.Title = "Details";
}

<h2><center>Thanks you for considering adoption!</center></h2>

<div>
    <h1>@Html.DisplayFor(model => model.DogName) </h1>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Sex)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fixed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fixed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>
        @if (Model.AdopterName != null)
        {
        <dt>
            @Html.DisplayNameFor(model => model.AdopterName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdopterName)
        </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Information)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Information)
        </dd>
        
    </dl>
</div>
<p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="action_btn bid">@Html.ActionLink("Adopt Me!", "AdoptionEdit","Dog", new { id = Model.DogId }, null)</button>

        </div>
</div>
    @Html.ActionLink("Back to List", "Index")
</p>

