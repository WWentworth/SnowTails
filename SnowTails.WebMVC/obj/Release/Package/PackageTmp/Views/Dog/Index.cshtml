@{
    ViewBag.Title = "Home Page";
}

<style>
    @@import url("https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.3/fotorama.css");
    @@import url('https://fonts.googleapis.com/css?family=Indie+Flower');
    @@import url('https://fonts.googleapis.com/css?family=Indie+Flower|Pacifico|Shadows+Into+Light');
    @@import url('https://fonts.googleapis.com/css?family=Indie+Flower|Open+Sans|Pacifico|Shadows+Into+Light|Spirax');
    @@import url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css");

    body {
        background-color: black;
    }


    :root {
        --gradient: linear-gradient(to left top, blue 10%, #0aa0c8 90%) !important;
    }

    body {
        background: #111 !important;
    }

    .card {
        background: #222;
        border: 1px solid blue;
        color: rgba(250, 250, 250, 0.8);
        margin-bottom: 2rem;
    }

    .btn {
        border: 5px solid;
        border-image-slice: 1;
        background: var(--gradient) !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        border-image-source: var(--gradient) !important;
        text-decoration: none;
        transition: all .4s ease;
    }

        .btn:hover, .btn:focus {
            background: var(--gradient) !important;
            -webkit-background-clip: none !important;
            -webkit-text-fill-color: #fff !important;
            border: 5px solid #fff !important;
            box-shadow: #222 1px 0 10px;
            text-decoration: underline;
        }


    .fa {
        font-size: 300%;
        padding: 8px;
        color: pink;
    }

    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }
</style>

<h5>Dogs Available for Adoption</h5>
<div class="container cards mx-auto mt-4">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="https://placedog.net/360/480/@item.DogId" class="card-img-top" alt="husky">
                    <div class="card-body">
                        <h5 class="card-title">@item.DogName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Sex, @item.Age Years Old</h6>
                        @Html.ActionLink("More Information!", "Details", new { id = item.DogId }, new { @class = "btn" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
